@model IEnumerable<Lab_AWS.Models.Truckdetail>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div>
    <h4>Chi tiết xe tải</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Số lượng trong kho
                </th>
                <th>
                    Số lượng đã sử dụng
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Inventory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Used)
                    </td>
                </tr>
            }
        </tbody>
    </table>
<div>
    <a asp-action="Index">Quay về</a>
</div>
