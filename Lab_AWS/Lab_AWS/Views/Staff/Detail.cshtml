@model Lab_AWS.Models.Staff
@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}
<div>
    <h4>Thông tin cá nhân</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Họ và tên</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">SĐT</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">Địa chỉ</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">Chức vụ </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class = "col-sm-2">Email</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">Password</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Staffedit" asp-route-id="@Model?.IdStaff">Edit</a> |
    <a asp-action="Staff" asp-controller="Login" >Quay về</a> 
</div>
